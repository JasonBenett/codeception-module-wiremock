{
  "name": "jasonbenett/codeception-module-wiremock",
  "description": "A Codeception module for WireMock integration.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "codeception",
    "functional testing",
    "wiremock",
    "testing"
  ],
  "authors": [
    {
      "name": "Jason Benedetti",
      "email": "jason.benedetti@live.fr"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "codeception/codeception": "^5.3",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.1 || ^2.0"
  },
  "require-dev": {
    "codeception/module-asserts": "^3.2",
    "codeception/stub": "^4.1",
    "friendsofphp/php-cs-fixer": "^3.90",
    "guzzlehttp/guzzle": "^7.8",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "JasonBenett\\CodeceptionModuleWiremock\\": "src/JasonBenett/CodeceptionModuleWiremock/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Unit\\": "tests/unit",
      "Tests\\Functional\\": "tests/functional"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit tests/unit",
    "test:functional": "codecept run functional",
    "phpstan": "phpstan analyse src --level=max --memory-limit=1G",
    "cs-check": "php-cs-fixer fix src --dry-run --diff --using-cache=no",
    "cs-fix": "php-cs-fixer fix src --using-cache=no"
  }
}
